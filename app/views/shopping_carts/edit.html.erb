<% @shopping_cart_items.each do |sci| %>
  <div class="container fluid">
    <div class="col-md-4 col-s-4"> 
      <div class= "sc-items-list">
       <%=link_to image_tag(sci.item.photo_url, size: '200x300'), sci.item %></span><br />
       <p class="sc-items-details">      
        Name: <%= sci.item.name%><br />
        Color: <%= sci.item.color %><br />
        Price: <%= sci.item.price %><br />
        Size: <%=sci.size %> <br />
        Quantity: <%=sci.quantity %> <br />
        <%=button_to"Delete Item",sci, method: :delete, class: :deleteButton %> 

       </p>   
      </div>
    </div>
  </div>
  
<%end%>
