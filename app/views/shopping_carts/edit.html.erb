<div class="container">
  <div class="row sc-titles">
    <div class="col-md-1">

    </div>
    <div class= "col-md-5"> 
      <h3 id="item-header">Item</h3>
    </div>
    <div class= "col-md-2"> 
      <h3>Quantity</h3>
    </div>
    <div class= "col-md-2">
      <h3>Unit Price</h3>
    </div>
    <div class= "col-md-2"> 
      <h3>Total</h3>

    </div>
  </div>

</div>


  <div class="container">
    <% @shopping_cart_items.each do |sci| %>
    <div class="row">
      
      <div class="col-md-1">
        <%=link_to"X",sci, method: :delete, class: :deleteButton %>
      </div>
      <div class="col-md-5">
        <%=link_to image_tag(sci.item.photo_url, size: '150x250'), sci.item %></span>
        Name: <%= sci.item.name %>
      </div>
      <div class="col-md-2">
        <%=form_for sci do |f| %>
          <%=f.label :Quantity %><br />
          <%=f.text_field :quantity %>
          <%=f.submit "update" %>
        <% end %>
      </div>
      <div class="col-md-2">
        <%= sci.item.price %>
      </div>
      <div class="col-md-2">
         
      </div>
      
    </div>
    <% end %>
  </div>

      
 
  

