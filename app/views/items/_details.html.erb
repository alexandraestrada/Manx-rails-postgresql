<div class="modal fade" id="details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Manx</h4>
      </div>
      <div class="modal-body">
      
  <dd><%= image_tag item.photo_url, size: '400x500' %></dd>
  <dt>Name</dt>
    <dd><%= item.name %></dd>

  <dt>Color</dt>
    <dd><%= item.color %></dd>

  <dt>Size</dt>
    <dd><%= item.size %></dd>


  <dt> Price</dt>
    <dd><%= item.price %></dd><br />


      <%=form_for @shopping_cart_item, {url: shopping_cart_items_path} do |f| %>
      <%=f.hidden_field :item_id, value: @shopping_cart_item.item_id %>
      <%#=f.hidden_field :item_id, value: @shopping_cart_item.shopping_cart_id %>
      <h4>
      XS <%=f.radio_button :size, "XS" %> S <%=f.radio_button :size, "S" %>  M <%=f.radio_button :size, "M" %> L <%=f.radio_button :size, "L" %> XL <%=f.radio_button :size, "XL" %></h4>
       <div class="col-xs-3">
      <%=f.label :Quantity %>
      <%=f.text_field :quantity %><br />
  </div>
    <div>
      <p><%=f.submit "Add Item to Shopping Cart" %></div>

    

    <%end%>
        <div class="back-button"><%= link_to 'Back', action: 'index', :class => "back-button" %></div>

      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
 </div>
</div>